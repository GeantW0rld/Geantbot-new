---
import Navbar from '../components/Navbar.jsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar client:load />
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: rgb(10, 14, 18);
	}
	body {
		overflow-y: auto;
		overflow-x: auto;
	}
	.main {
		width: 100%;
		padding: 0;
		margin: 0;
		margin-top: 100px;
		color: white;
		font-size: 20px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 7px;
	}
	h1 {
		font-size: 40px;
		font-weight: bold;
	}
	h1, h2, h3, h4, p {
		color: rgb(255, 255, 255);
		padding: 3px;
		margin: 0px;
	}
	p {
		font-size: 20px;
		font-weight: normal;
	}
	.navbar {
		position: absolute;
		left: 0px;
		top: 10px;
		width: 100%;
		z-index: 100;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.navbar-container {
		width: 97%;
		z-index: 100;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		border-radius: 15px;
		padding: 5px;
		padding-left: 15px;
		padding-right: 15px;
		backdrop-filter: blur(3px);
		box-shadow: 2px 5px 5px 2px rgba(0, 0, 0, .5);
	}
	.navbar-left {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
	}
	.navbar-right {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		gap: 10px;
	}
	.navbar-items {
		width: 100%;
		z-index: 0;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		gap: 10px;
	}
	#navbar-menu {
		display: none;
	}
	.navbar-btn {
		background: transparent;
		cursor: pointer;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		border-radius: 50px;
		padding: 7px;
		box-shadow: none;
		gap: 7px;
		text-decoration: none;
		transition: all .15s;
	}
	.navbar-btn.white {
		background: rgb(255, 255, 255);
		box-shadow: 2px 5px 5px 2px rgba(0, 0, 0, .5);
	}
	.navbar-btn h2 {
		color: rgb(255, 255, 255);
		user-select: none;
		font-size: 15px;
		white-space: nowrap;
		padding: 0px;
		margin: 0px;
	}
	.navbar-btn.white h2 {
		color: rgb(0, 0, 0);
	}
	.navbar-btn:hover {
		background: rgb(50, 54, 58);
	}
	.navbar-btn:hover:active {
		background: rgb(20, 24, 28);
	}
	.navbar-btn.white:hover {
		background: rgb(150, 154, 158);
	}
	.navbar-btn.white:hover:active {
		background: rgb(100, 104, 108);
	}
	@media only screen and (max-width: 700px) {
		#navbar-menu {
			display: flex;
		}
		.navbar-icon {
			width: 65px;
			height: 65px;
		}
		.navbar-icon[src] {
			content: url("/icons/mobile_icon.png");
		}
		.navbar-items {
			position: absolute;
			background: rgb(10, 14, 18);
			width: 100%;
			top: 90px;
			border-radius: 10px;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			visibility: hidden;
			transform: translateY(-200px);
			opacity: 0;
			transition: all .15s;
		}
		.navbar-items.visible {
			visibility: visible;
			transform: translateY(0px);
			opacity: 1;
		}
	}

</style>
