---
import Navbar from '../components/Navbar.jsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="SkyBeWorld Website" />
		<meta content="SkyBeWorld" property="og:title" />
        <meta content="SkyBeWorld website" property="og:description" />
        <meta content="https://geantbot.xyz" property="og:url" />
        <meta content="https://geantbot.xyz/assets/logo.png" property="og:image"/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar client:load />
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "Gotham-Book";
		src: url("../fonts/Gotham-Book.otf") format("opentype");
	}
	html {
		background: rgb(10, 14, 18);
		font-family: "Gotham-Book";
		text-align: center;
	}
	.main {
		width: 100%;
		background: rgb(10, 14, 18);
		padding: 0;
		margin: 0;
		border-top-left-radius: 25px;
		border-top-right-radius: 25px;
		margin-top: 20px;
		color: white;
		font-size: 20px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 7px;
		z-index: 10;
	}
	h1 {
		font-size: 40px;
		font-weight: bold;
	}
	h1, h2, h3, h4, p {
		color: rgb(255, 255, 255);
		padding: 3px;
		margin: 0px;
	}
	p {
		font-size: 20px;
		font-weight: normal;
	}
	.navbar {
		position: sticky;
		left: 0px;
		top: 10px;
		width: 100%;
		z-index: 100;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.navbar-container {
		width: 97%;
		z-index: 100;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		border-radius: 15px;
		padding: 5px;
		padding-left: 15px;
		padding-right: 15px;
		backdrop-filter: blur(5px);
		box-shadow: 2px 5px 5px 2px rgba(0, 0, 0, .5);
	}
	.navbar-left {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
	}
	.navbar-right {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		gap: 10px;
	}
	.navbar-items {
		width: 100%;
		z-index: 0;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		gap: 10px;
	}
	#navbar-menu {
		display: none;
	}
	.navbar-btn {
		background: transparent;
		cursor: pointer;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		border-radius: 50px;
		padding: 7px;
		box-shadow: none;
		gap: 7px;
		text-decoration: none;
		transition: all .15s;
	}
	.navbar-btn.white {
		background: rgb(255, 255, 255);
		box-shadow: 2px 5px 5px 2px rgba(0, 0, 0, .5);
	}
	.navbar-btn h2 {
		color: rgb(255, 255, 255);
		user-select: none;
		font-size: 15px;
		white-space: nowrap;
		padding: 0px;
		margin: 0px;
	}
	.navbar-btn.white h2 {
		color: rgb(0, 0, 0);
	}
	.navbar-btn:hover {
		background: rgba(0, 0, 0, .5);
	}
	.navbar-btn:hover:active {
		background: rgba(0, 0, 0, .35);
	}
	.navbar-btn.white:hover {
		background: rgba(255, 255, 255, .5);
	}
	.navbar-btn.white:hover:active {
		background: rgba(255, 255, 255, .35);
	}
	.note_box {
		background-color: rgba(255, 255, 255, .25);
		border: 2px solid rgb(255, 255, 255);
		border-radius: 15px;
		padding: 10px;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		gap: 7px;
	}
	.note_box p {
		color: rgb(255, 255, 255);
		font-weight: bold;
	}
	.note_box.warning {
		background-color: rgba(255, 150, 0, .25);
		border: 2px solid rgb(255, 150, 0);
	}
	.note_box.warning p {
		color: rgb(255, 150, 0);
	}
	.note_box.error {
		background-color: rgba(255, 50, 50, .25);
		border: 2px solid rgb(255, 50, 50);
	}
	.note_box.error p {
		color: rgb(255, 50, 50);
	}
	.note_box.info {
		background-color: rgba(0, 150, 150, .25);
		border: 2px solid rgb(0, 150, 150);
	}
	.note_box.info p {
		color: rgb(0, 150, 150);
	}
	@media only screen and (max-width: 700px) {
		#navbar-menu {
			display: flex;
		}
		.navbar-icon {
			width: 65px;
			height: 65px;
		}
		.navbar-icon[src] {
			content: url("/icons/mobile_icon.png");
		}
		.navbar-items {
			position: absolute;
			background: rgb(10, 14, 18);
			width: 100%;
			left: 0;
			top: 60px;
			border-radius: 10px;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			visibility: hidden;
			transform: translateY(-200px);
			opacity: 0;
			transition: all .15s;
		}
		.navbar-items.visible {
			visibility: visible;
			transform: translateY(0px);
			opacity: 1;
		}
	}

</style>
